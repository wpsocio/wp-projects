{
	"name": "@wpsocio/wpdev",
	"version": "1.0.8",
	"description": "A CLI to manage WordPress projects in a monorepo or a standalone repo.",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/wpsocio/wp-projects",
		"directory": "tools/wpdev"
	},
	"homepage": "https://github.com/wpsocio/wp-projects/tree/main/tools/wpdev",
	"author": {
		"name": "WP Socio",
		"url": "https://wpsocio.com"
	},
	"bugs": {
		"url": "https://github.com/wpsocio/wp-projects/issues"
	},
	"files": [
		"bin",
		"dist",
		"src",
		"oclif.manifest.json"
	],
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"bin": {
		"wpdev": "./bin/run.js"
	},
	"main": "./dist/cjs/index.cjs",
	"module": "./dist/index.js",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/cjs/index.cjs"
		}
	},
	"dependencies": {
		"@manypkg/find-root": "^3.1.0",
		"@manypkg/get-packages": "^3.1.0",
		"@manypkg/tools": "^2.1.0",
		"@oclif/core": "^4.8.0",
		"archiver": "^7.0.1",
		"chalk": "^5.6.2",
		"cssnano": "^7.1.2",
		"dotenv": "^17.2.3",
		"enquirer": "^2.4.1",
		"execa": "^9.6.1",
		"fast-glob": "^3.3.3",
		"find-up": "^8.0.0",
		"gettext-parser": "^9.0.0",
		"listr2": "^9.0.5",
		"parse-json": "^8.3.0",
		"path-exists": "^5.0.0",
		"postcss": "^8.5.6",
		"rimraf": "^6.1.2",
		"semver": "^7.7.3",
		"zod": "^4.2.1"
	},
	"devDependencies": {
		"@types/archiver": "^7.0.0",
		"@types/gettext-parser": "^8.0.0",
		"@types/semver": "^7.7.1",
		"oclif": "^4.22.61",
		"tsup": "^8.5.1",
		"typescript": "^5.9.3",
		"wireit": "^0.14.12"
	},
	"oclif": {
		"bin": "wpdev",
		"dirname": "wpdev",
		"commands": "./dist/commands",
		"repositoryPrefix": "<%- repo %>/blob/@wpsocio/wpdev@<%- version %>/tools/wpdev/<%- commandPath %>",
		"topicSeparator": " "
	},
	"scripts": {
		"build": "wireit",
		"build:local": "wireit",
		"clean": "rimraf dist/ tsconfig.tsbuildinfo .wireit",
		"prepublishOnly": "wireit",
		"typecheck": "tsc --noEmit",
		"version": "oclif readme",
		"watch": "tsc --watch"
	},
	"wireit": {
		"build": {
			"command": "tsup && tsc --build --pretty",
			"clean": "if-file-deleted",
			"files": [
				"src/",
				"tsconfig.json",
				"tsup.config.ts"
			],
			"output": [
				"dist/**"
			]
		},
		"build:local": {
			"dependencies": [
				"build"
			]
		},
		"prepublishOnly": {
			"command": "pnpm build && oclif manifest && oclif readme",
			"dependencies": [
				"clean"
			]
		}
	}
}
