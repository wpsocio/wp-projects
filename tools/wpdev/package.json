{
	"name": "@wpsocio/wpdev",
	"version": "1.0.7",
	"description": "A CLI to manage WordPress projects in a monorepo or a standalone repo.",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "https://github.com/wpsocio/wp-projects",
		"directory": "tools/wpdev"
	},
	"homepage": "https://github.com/wpsocio/wp-projects/tree/main/tools/wpdev",
	"author": {
		"name": "WP Socio",
		"url": "https://wpsocio.com"
	},
	"bugs": {
		"url": "https://github.com/wpsocio/wp-projects/issues"
	},
	"files": ["bin", "dist", "src", "oclif.manifest.json"],
	"publishConfig": {
		"access": "public"
	},
	"type": "module",
	"bin": {
		"wpdev": "./bin/run.js"
	},
	"main": "./dist/cjs/index.cjs",
	"module": "./dist/index.js",
	"exports": {
		".": {
			"import": "./dist/index.js",
			"require": "./dist/cjs/index.cjs"
		}
	},
	"dependencies": {
		"@manypkg/find-root": "^2.2.3",
		"@manypkg/get-packages": "^2.2.2",
		"@manypkg/tools": "^1.1.2",
		"@oclif/core": "^4.2.10",
		"archiver": "^7.0.1",
		"chalk": "^5.4.1",
		"cssnano": "^7.0.6",
		"dotenv": "^16.4.7",
		"enquirer": "^2.4.1",
		"execa": "^9.5.2",
		"fast-glob": "^3.3.3",
		"find-up": "^7.0.0",
		"gettext-parser": "^8.0.0",
		"listr2": "^8.2.5",
		"parse-json": "^8.2.0",
		"postcss": "^8.5.3",
		"rimraf": "^6.0.1",
		"semver": "^7.7.1",
		"zod": "^3.24.2"
	},
	"devDependencies": {
		"@types/archiver": "^6.0.3",
		"@types/gettext-parser": "^8.0.0",
		"@types/semver": "^7.5.8",
		"oclif": "^4.17.40",
		"tsup": "^8.4.0",
		"typescript": "^5.8.2",
		"wireit": "^0.14.11"
	},
	"oclif": {
		"bin": "wpdev",
		"dirname": "wpdev",
		"commands": "./dist/commands",
		"repositoryPrefix": "<%- repo %>/blob/@wpsocio/wpdev@<%- version %>/tools/wpdev/<%- commandPath %>",
		"topicSeparator": " "
	},
	"scripts": {
		"build": "wireit",
		"build:local": "wireit",
		"clean": "rimraf dist/ tsconfig.tsbuildinfo .wireit",
		"prepublishOnly": "wireit",
		"typecheck": "tsc --noEmit",
		"version": "oclif readme",
		"watch": "tsc --watch"
	},
	"wireit": {
		"build": {
			"command": "tsup && tsc --build --pretty",
			"clean": "if-file-deleted",
			"files": ["src/", "tsconfig.json", "tsup.config.ts"],
			"output": ["dist/**"]
		},
		"build:local": {
			"dependencies": ["build"]
		},
		"prepublishOnly": {
			"command": "pnpm build && oclif manifest && oclif readme",
			"dependencies": ["clean"]
		}
	}
}
