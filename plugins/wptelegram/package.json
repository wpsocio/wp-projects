{
	"name": "wptelegram",
	"title": "WP Telegram",
	"version": "4.2.14",
	"description": "Integrate your WordPress site perfectly with Telegram with full control.",
	"private": true,
	"license": "GPL-3.0-or-later",
	"repository": {
		"type": "git",
		"url": "https://github.com/wpsocio/wp-projects",
		"directory": "plugins/wptelegram"
	},
	"author": {
		"name": "WP Socio",
		"url": "https://wpsocio.com"
	},
	"bugs": {
		"url": "https://github.com/wpsocio/wp-projects/issues"
	},
	"type": "module",
	"scripts": {
		"dev": "vite --port=5002",
		"build": "wireit",
		"lint:php": "composer run lint",
		"setup:php": "wireit",
		"setup:php:prod": "wireit",
		"unset-vendor-dir": "composer config vendor-dir --unset",
		"validate-build": "pnpm build-utils validate"
	},
	"dependencies": {
		"@wordpress/components": "^31.0.0",
		"@wordpress/data": "^10.37.0",
		"@wordpress/edit-post": "^8.37.0",
		"@wordpress/editor": "^14.37.0",
		"@wordpress/element": "^6.37.0",
		"@wordpress/media-utils": "^5.37.0",
		"@wordpress/plugins": "^7.37.0",
		"@wpsocio/form": "workspace:*",
		"@wpsocio/i18n": "workspace:*",
		"@wpsocio/services": "workspace:*",
		"@wpsocio/shared-ui": "workspace:*",
		"@wpsocio/ui": "workspace:*",
		"@wpsocio/utilities": "workspace:*",
		"ramda": "^0.32.0",
		"react": "^18.3.1",
		"zod": "^4.2.1"
	},
	"devDependencies": {
		"@types/jquery": "^3.5.33",
		"@types/ramda": "^0.31.1",
		"@types/react": "^18.3.27",
		"@types/react-dom": "^18.3.7",
		"@types/wordpress__edit-post": "^8.4.2",
		"@wpsocio/vite-wp-react": "workspace:*",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"vite": "^7.3.0",
		"wireit": "^0.14.12"
	},
	"wireit": {
		"build": {
			"command": "vite build",
			"output": [
				"src/assets/build"
			]
		},
		"setup:php": {
			"command": "composer install",
			"dependencies": [
				"unset-vendor-dir"
			]
		},
		"setup:php:prod": {
			"command": "composer install --no-dev && pnpm run unset-vendor-dir",
			"env": {
				"COMPOSER_MIRROR_PATH_REPOS": "1"
			},
			"dependencies": [
				"set-prod-vendor"
			]
		},
		"set-prod-vendor": {
			"command": "composer config vendor-dir src/vendor"
		}
	}
}
