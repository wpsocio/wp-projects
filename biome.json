{
	"$schema": "https://biomejs.dev/schemas/2.3.10/schema.json",
	"files": {
		"includes": [
			"**/*.js",
			"**/*.jsx",
			"**/*.ts",
			"**/*.tsx",
			"**/*.json",
			"!**/dist/**/*",
			"!**/build/**/*",
			"!**/node_modules/**/*",
			"!**/vendor/**/*",
			"!**/.wireit/**/*",
			"!**/custom-plugins/*",
			"!packages/js/ui/src/components/**/*"
		]
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"javascript": {
		"formatter": {
			"quoteStyle": "single",
			"jsxQuoteStyle": "double"
		}
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"useTemplate": "off"
			},
			"correctness": {
				"noUnusedImports": {
					"level": "warn",
					"fix": "none"
				},
				"noUnusedVariables": "warn"
			},
			"suspicious": {
				"noConsole": { "level": "warn", "options": { "allow": ["log"] } }
			}
		}
	}
}
